{
  "name": "@solfacil/components-ui",
  "author": "Solfacil - Fernando Jesus",
  "version": "0.1.15",
  "private": false,
  "license": "MIT",
  "description": "Component library based on Vue and Tailwind",
  "homepage": "https://github.com/solfacil/components-ui#readme",
  "scripts": {
    "start": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "prepare": "vue-cli-service build --target lib --name solfacil ./src/index.js",
    "lint": "vue-cli-service lint",
    "format": "prettier --write \"**/*.+(js|vue|jsx|json|scss|css|md)\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint --fix"
    }
  },
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.json",
    "*.js"
  ],
  "main": "./dist/solfacil.common.js",
  "dependencies": {
    "core-js": "^3.8.3",
    "tailwindcss": "^1.9.6",
    "vue": "^2.6.12"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@vue/cli-plugin-babel": "~4.5.11",
    "@vue/cli-plugin-eslint": "~4.5.11",
    "@vue/cli-plugin-router": "~4.5.11",
    "@vue/cli-plugin-unit-jest": "^4.5.11",
    "@vue/cli-plugin-vuex": "~4.5.11",
    "@vue/cli-service": "~4.5.11",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/server-test-utils": "^1.1.3",
    "@vue/test-utils": "^1.1.3",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-require-context-hook": "^1.0.0",
    "babel-plugin-transform-require-context": "^0.1.1",
    "eslint": "^7.19.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-prettier-vue": "^2.1.1",
    "eslint-plugin-vue": "^7.5.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "node-sass": "^4.14.1",
    "prettier": "^2.2.1",
    "sass-loader": "^8.0.2",
    "vue-cli-plugin-webpack-bundle-analyzer": "~4.0.0",
    "vue-jest": "^3.0.7",
    "vue-template-compiler": "^2.6.12"
  },
  "keywords": [
    "ui",
    "vue",
    "css",
    "vue2",
    "sass",
    "mobile",
    "frontend",
    "component",
    "components",
    "tailwind",
    "javascript"
  ]
}
