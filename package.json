{
  "name": "@solfacil/components-ui",
  "version": "1.61.1",
  "private": false,
  "description": "Component library based on Vue and Tailwind",
  "author": "Solfacil - Fernando Jesus",
  "engines": {
    "node": "^14"
  },
  "scripts": {
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "build-storybook": "build-storybook -s public",
    "format": "prettier --write \"**/*.+(js|vue|jsx|json|scss|css|md)\"",
    "generate": "yarn plop --plopfile ./generators/plopfile.js",
    "prepare": "husky install && vue-cli-service build --target lib --name solfacil ./src/index.js",
    "proxy": "ngrok http 6006",
    "start": "vue-cli-service serve",
    "storybook": "start-storybook -p 6006 --ci",
    "test": "vue-cli-service test:unit",
    "test:coverage": "vue-cli-service test:unit --coverage",
    "test:watch": "vue-cli-service test:unit --watch"
  },
  "main": "./dist/solfacil.common.js",
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.json",
    "*.js"
  ],
  "setupFiles": [
    "<rootDir>/.jest/register-context.js"
  ],
  "dependencies": {
    "@vue/compat": "^3.2.29",
    "chart.js": "2.9.4",
    "core-js": "3.20.2",
    "html2canvas": "^1.3.3",
    "install": "^0.13.0",
    "lodash": "^4.17.21",
    "maska": "^1.5.0",
    "tailwindcss": "^1.9.6",
    "v-mask": "^2.3.0",
    "vue": "^3.2.29",
    "vue2-datepicker": "3.10.4"
  },
  "devDependencies": {
    "@babel/core": "7.16.5",
    "@babel/plugin-proposal-class-properties": "7.16.5",
    "@babel/preset-env": "7.16.10",
    "@commitlint/cli": "16.0.2",
    "@commitlint/config-conventional": "16.0.0",
    "@storybook/addon-actions": "^6.4.14",
    "@storybook/addon-essentials": "^6.4.14",
    "@storybook/addon-links": "^6.4.14",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/vue3": "^6.4.14",
    "@vue/cli-plugin-babel": "~4.5.15",
    "@vue/cli-plugin-eslint": "~4.5.15",
    "@vue/cli-plugin-router": "~4.5.15",
    "@vue/cli-plugin-unit-jest": "~4.5.15",
    "@vue/cli-plugin-vuex": "~4.5.15",
    "@vue/cli-service": "~4.5.15",
    "@vue/compiler-sfc": "^3.2.29",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/test-utils": "^2.0.0-rc.18",
    "@vue/vue3-jest": "^27.0.0-alpha.4",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.3",
    "babel-plugin-require-context-hook": "^1.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-prettier-vue": "^3.1.0",
    "eslint-plugin-storybook": "0.5.5",
    "eslint-plugin-vue": "^7.17.0",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "12.1.7",
    "ngrok": "^4.2.2",
    "node-sass": "4.14.1",
    "plop": "3.0.5",
    "postcss": "^8.4.5",
    "prettier": "2.5.1",
    "resolve-url-loader": "^4.0.0",
    "sass-loader": "^8.0.2",
    "url-loader": "^4.1.1",
    "vue-cli-plugin-webpack-bundle-analyzer": "~4.0.0",
    "vue-jest": "^5.0.0-alpha.10",
    "vue-loader": "^16.0.0"
  },
  "homepage": "http://solfacil.github.io/components-ui",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "keywords": [
    "ui",
    "vue",
    "css",
    "vue2",
    "sass",
    "mobile",
    "frontend",
    "component",
    "components",
    "tailwind",
    "javascript",
    "storybook"
  ],
  "license": "MIT"
}
