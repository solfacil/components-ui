{
  "name": "@solfacil/components-ui",
  "version": "1.28.0",
  "private": false,
  "description": "Component library based on Vue and Tailwind",
  "author": "Solfacil - Fernando Jesus",
  "scripts": {
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "build-storybook": "build-storybook -s public",
    "format": "prettier --write \"**/*.+(js|vue|jsx|json|scss|css|md)\"",
    "generate": "yarn plop --plopfile ./generators/plopfile.js",
    "prepare": "husky install && vue-cli-service build --target lib --name solfacil ./src/index.js",
    "proxy": "ngrok http 6006",
    "start": "vue-cli-service serve",
    "storybook": "start-storybook -p 6006 -s public",
    "test": "vue-cli-service test:unit",
    "test:coverage": "vue-cli-service test:unit --coverage && cd coverage/lcov-report && live-server",
    "test:watch": "vue-cli-service test:unit --watch"
  },
  "main": "./dist/solfacil.common.js",
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.json",
    "*.js"
  ],
  "dependencies": {
    "chart.js": "2.9.4",
    "core-js": "^3.16.4",
    "html2canvas": "^1.3.2",
    "lodash": "^4.17.21",
    "tailwindcss": "^1.9.6",
    "vue": "^2.6.14",
    "vue-chartjs": "^3.5.1",
    "vue2-datepicker": "^3.10.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-env": "^7.14.8",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/vue": "^6.3.7",
    "@vue/cli-plugin-babel": "~4.5.13",
    "@vue/cli-plugin-eslint": "~4.5.13",
    "@vue/cli-plugin-router": "~4.5.13",
    "@vue/cli-plugin-unit-jest": "~4.5.13",
    "@vue/cli-plugin-vuex": "~4.5.13",
    "@vue/cli-service": "~4.5.13",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/test-utils": "^1.2.2",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-require-context-hook": "^1.0.0",
    "babel-plugin-transform-require-context": "^0.1.1",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-prettier-vue": "^3.1.0",
    "eslint-plugin-vue": "^7.17.0",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.2",
    "live-server": "^1.2.1",
    "ngrok": "^4.1.0",
    "node-sass": "4.14.1",
    "plop": "^2.7.4",
    "prettier": "^2.3.2",
    "resolve-url-loader": "^4.0.0",
    "sass-loader": "^8.0.2",
    "svg-url-loader": "^7.1.1",
    "vue-cli-plugin-webpack-bundle-analyzer": "~4.0.0",
    "vue-jest": "^3.0.7",
    "vue-loader": "^15.9.8",
    "vue-template-compiler": "^2.6.14"
  },
  "homepage": "http://solfacil.github.io/components-ui",
  "keywords": [
    "ui",
    "vue",
    "css",
    "vue2",
    "sass",
    "mobile",
    "frontend",
    "component",
    "components",
    "tailwind",
    "javascript",
    "storybook"
  ],
  "license": "MIT"
}
